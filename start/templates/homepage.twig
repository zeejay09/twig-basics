<div class="hero-unit">
	<h1>{{ pageTitle }}</h1>

	<div class="sale-ends-at">
		Sale Ends: {{ saleEndsAt|date( 'D M jS ga') }}
	</div>
</div>

<div class="raw">
	{% for product in products %}
		<div class="span4">
			<h2>{{ product|upper|reverse }}</h2>

			{#<div class="price">
				{{ (random()/100)|number_format(1) }}

				{% if random(10) < 5 %}
					<div>Wow, this is some cheap twig!</div>
				{% endif %}

			</div>#}
		</div>
	{% endfor %}

	{% if products|length == 0 %}
		<div class="alert alert-error span12">
			Oh now! We're all out of super-awesome peguin clothes!
		</div>
	{% endif %}
</div>

<div>
	&copy; {{ 'now'|date('Y') }}
</div>